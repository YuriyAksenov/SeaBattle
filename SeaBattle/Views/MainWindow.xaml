<Window x:Class="SeaBattle.MainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SeaBattle"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="660">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>
        <Button>Начать игру</Button>
        <Grid x:Name="HomeField" Grid.Row="1" Grid.Column="0" Background="Honeydew"></Grid>
        <Grid x:Name="EnemyField" Grid.Row="1" Grid.Column="1" Background="Honeydew"></Grid>
    </Grid>
</Window>
